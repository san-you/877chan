<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <span class="card-title">レス詳細</span>
        <div class="section scrollspy">
        <p>内容:</p>
        <div style="margin-bottom: 8px;"><%= @comment.content %></div>
        <p>スレッド:</p>
        <div style="margin-bottom: 8px;"><%= @comment.board.title %></div>
        <p>ユーザ:</p>
        <div style="margin-bottom: 8px;"><%= @comment.user.email %></div>
        </div>

        <%= link_to :back, class: 'waves-effect waves-light btn' do %>
        <i class="material-icons left">arrow_back</i>
        <span>戻る</span>
        <% end %>

      </div>
    </div>
  </div>
</div>
