<h1>新規スレッド</h1>

<%= form_for @board do |f| %>
<p>コメント:</p><p><%= f.text_field :title, :rows => 5 %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= f.check_box(:categories, { multiple: true, checked: category[:checked], disabled: category[:disabled], include_hidden: false }, category.id ) %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'New Category', new_category_path %>
<br>

<%= f.submit '新規スレッドを作成する' %>
<% end %>

<%= link_to 'Back', boards_path %>
