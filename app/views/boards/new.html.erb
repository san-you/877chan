<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <span class="card-title">新規スレッド作成</span>
        <div class="section scrollspy">
          <%= form_for @board do |f| %>
          <div class="input-field">
            <%= f.label :title, "タイトル" %><br />
            <%= f.email_field :title %>
          </div>
        </div>

        
        <div class="section scrollspy row">
        <div class="col s4">
        <table>
          <thead>
            <tr>
              <th>カテゴリ</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= f.check_box(:categories, { multiple: true, checked: category[:checked], disabled: category[:disabled], include_hidden: false }, category.id ) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        </div>

        <div class="section scrollspy">
        <%= link_to new_category_path, class: 'waves-effect waves-light btn' do %>
        <i class="material-icons left">cloud</i>
        <span>新規カテゴリ作成</span>
        <% end %>

        </div>

        <div class="section scrollspy">
          <div class="input-field right-align">
            <%= button_tag class: 'btn waves-effect waves-light' do %>
              <%= content_tag :i, "send", class: "material-icons right" %>
              スレッド作成
            <% end %>
          </div>
        <% end %>
        </div>

        <%= link_to boards_path, class: 'waves-effect waves-light btn' do %>
        <i class="material-icons left">cloud</i>
        <span>戻る</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
