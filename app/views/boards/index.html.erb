<h3 class="header">スレ一覧</h3>
<div class="section scrollspy">
  <table>
    <thead>
      <tr>
        <th>タイトル</th>
      </tr>
    </thead>

    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td><%= link_to board.title, board %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @boards %>
</div>

<div class="section scrollspy right-align">
  <%= link_to new_board_path, class: 'waves-effect waves-light btn' do%>
    <i class="material-icons right">add_circle</i>
    <span>新規スレッド</span>
  <% end %>
</div>
